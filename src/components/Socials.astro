---
interface Props {
	title: string;
    href: string;
    icon: string;
}

const { title, href, icon } = Astro.props;
---

<div class="socials" id={title}>
    <a href={href}>
        <i class= {icon}></i>
    </a>
</div>

<style>
    .socials {
        width: 48px;
        height: 48px;
        background-color: #23262d;
        border-radius: 7px;
		background-position: 100%;
		transition: 0.6s cubic-bezier(0.22, 1, 0.36, 1);
        margin: auto;
        text-align: center;
        box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
        background-size: 400%;
        justify-content: center;
        justify-items: center;
        justify-self: center;
    }

    .socials:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
		transform: scale(1.1);
	}

    a {
		text-decoration: none;
        color: white;
        font-size: 32px;
	}
</style>