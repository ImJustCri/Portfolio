---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---
<Layout title="ImJustCri">
	<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

	<main>
		<div class="cover">
            <div class="projects-div" id="projects">
		<div class="projects-centered">
			<ul role="list" class="link-card-grid">
				<Card
					href="https://docs.astro.build/"
					title="CapacitÃ  Merito Inclusione"
					body="Website made and mantained using WordPress"
					imagePath='Portfolio/projects_photos/cmi.png'
				/>
				<Card
					href="https://astro.build/integrations/"
					title="Equivocal"
					body="Puzzle-based videogame programmed in Godot 4"
					imagePath='Portfolio/projects_photos/equivocal.png'
				/>
				<Card
					href="https://www.figma.com/proto/M03SsYJp4BAGZaz7NfkDnj/Food-Delivery-App?page-id=1%3A3&node-id=69-379&node-type=frame&viewport=-2164%2C252%2C0.48&t=xoJHMcWoDkufL81V-1&scaling=min-zoom&content-scaling=fixed&starting-point-node-id=69%3A379"
